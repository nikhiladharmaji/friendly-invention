<div id="add-adj" v-cloak>
 <div class="container">
    <h1 class="text-center">Add Adjudicator</h1>
    <div class="add-adj-form-container">
      <hr/>
      <ajax-form action="addAdjs" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="formData" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
        <div class="form-group">
          <input type="adjName" class="form-control" placeholder="Adjudicator name" v-model.trim="formData.adjName">
          <div class="invalid-feedback" v-if="formErrors.adjName">Please provide a valid name</div>
        </div>

        <div class="form-group">
          <label >Select Institution </label>
          <select class="form-control" v-model.trim="formData.instID">
            <% institutions.forEach(function(insti) { %>
              <option value="<%= insti.instID %>"><%= insti.name %></option>
            <% }) %>
          </select>
        </div>

       <div class="form-group">
          <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block">Add</ajax-button>
       </div>
      </ajax-form>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>