<div id="display-adjs" v-cloak>
  <div class="container">
    <h2 class="heading">ADJUDICATORS</h2>
    <div class="row">
      <div class="col-md">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col"> # </th>
              <th scope="col"> Name </th>
              <th scope="col"> Institution </th>
              <th scope="col"> Edit </th>
            </tr>
          </thead>
          <tbody>
           <% adjs.forEach(function(adj, index) { %>
                <tr>
                    <td> <%= index + 1 %> </td>
                    <td> <%= adj.name %> </td>
                    <td> <%= adj.institution %> </td>
                    <td> <a href="/edit-adjs?adjID=<%= adj.adjID %>"> Edit Details </a> </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>

