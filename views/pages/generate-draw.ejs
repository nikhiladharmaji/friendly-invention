<div id="generate-draw" v-cloak>
  <div class="container">
    <h1 class="text-center">Generate draw</h1>
    <div class="generate-draw-form-container">
      <hr/>
      <ajax-form action="generateMatchups" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="formData" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
        <div class="form-group">
          <label >Select Round </label>
          <select class="form-control" v-model.trim="formData.roundNo">
            <% for(let roundNo = 1; roundNo <= currentRound; roundNo++) { %>
              <option value="<%= roundNo %>" <% if(roundNo !== currentRound) { %> disabled <% } %>>Round <%= roundNo %></option>
            <% } %>
            
          </select>
        </div>
       <div class="form-group">
          <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block">Generate</ajax-button>
       </div>
      </ajax-form>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
